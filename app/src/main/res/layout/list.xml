<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- android:gravity="center_horizontal" -->

    <TextView
        android:id="@+id/listTextIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listTextTrainType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10.0sp"
            android:layout_marginRight="10.0sp"
            android:text="TextView"
            android:textColor="#2196F3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/listTextDest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0sp"
            android:layout_marginRight="10.0sp"
            android:text="TextView"
            android:textColor="#CDDC39"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listTextTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10.0sp"
            android:layout_marginRight="10.0sp"
            android:layout_weight="1"
            android:text="テスト"
            android:textAlignment="gravity"
            android:textColor="#FF5722"
            android:textSize="25.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listTextCountTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="10.0sp"
            android:layout_marginBottom="5.0sp"
            android:layout_weight="1"
            android:gravity="right|top"
            android:textAlignment="gravity"
            android:textSize="25.0sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>